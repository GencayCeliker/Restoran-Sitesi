@using Restorant_Sitesi.Models
@model AnasayfaSınıf
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/RestourantLayout.cshtml";
}

<section class="hero-wrap">
    <div class="home-slider owl-carousel js-fullheight">

        @foreach (var x in Model.SliderBannerlari)
        {
            <div class="slider-item js-fullheight" style=" background-image: url('@x.Resim');">
                <div class="overlay"></div>
                <div class="container">
                    <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center">
                        <div class="col-md-12 ftco-animate">
                            <div class="text w-100 mt-5 text-center">
                                <span class="subheading"> @x.Baslik</span>
                                <h1>@x.Icerik</h1>
                                <span class="subheading-2">@x.Aciklama</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</section>
<section class="ftco-section ftco-wrap-about ftco-no-pb ftco-no-pt">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-sm-4 p-4 p-md-5 d-flex align-items-center justify-content-center bg-primary">

                <form action="/Index/RezarvasyonYap" method="post" class="appointment-form">
                    <h3 class="mb-3">REZERVASYON YAPIN</h3>
                    <div class="row">

                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="text" name="MusteriAdSoyad" class="form-control" placeholder="Ad Soyad" required>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="email" name="Mail" class="form-control" placeholder="Mail Adresi" required>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="tel" name="MusteriTelefon" class="form-control" placeholder="Telefon Giriniz" required>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="input-wrap">
                                    <div class="icon"><span class="fa fa-calendar"></span></div>
                                    <input type="text" class="form-control book_date" name="Tarih" placeholder="Tarih Seçiniz" required>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="input-wrap">
                                    <div class="icon"><span class="fa fa-clock-o"></span></div>
                                    <input type="text" id="timepicker" class="form-control book_time" name="Saat" placeholder="Saat Seçiniz" required>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="input-wrap">
                                    <div class="icon"><span class="fa fa-user"></span></div>
                                    <input type="number"
                                           name="KisiSayisi"
                                           class="form-control"
                                           placeholder="Kişi Sayısı (Örn: 4)"
                                           min="1"
                                           required>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="submit" value="Masayı Ayırt" class="btn btn-white py-3 px-4">
                            </div>
                        </div>

                    </div>
                </form>

            </div>
            <div class="col-sm-8 wrap-about py-5 ftco-animate img" style="background-image: url('../../images/@Model.Hakkımda.OrderByDescending(x => x.HakkimdaID).Take(1).FirstOrDefault().Resim');">
                <div class="row pb-5 pb-md-0">
                    <div class="col-md-12 col-lg-7">
                        <div class="heading-section mt-5 mb-4">
                            <div class="pl-lg-3 ml-md-5">
                                <span class="subheading">Hakkımızda</span>
                                <h2 class="mb-4">@Model.Hakkımda.OrderByDescending(x => x.HakkimdaID).Take(1).FirstOrDefault().Baslik</h2>
                            </div>
                        </div>
                        <div class="pl-lg-3 ml-md-5">
                            <p>@Model.Hakkımda.OrderByDescending(x => x.HakkimdaID).Take(1).FirstOrDefault().Icerik</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-intro" style="background-image:  url(../../images/bg_3.jpg);">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <span>Rezervasyonlar Açıldı</span>
                <h2>
                    Özel Akşam Yemekleri &amp; Mutlu Saatler
                </h2>
            </div>
        </div>
    </div>
</section>



<section class="ftco-section menu-section-custom">
    <div class="container-fluid px-5">
        <div class="row justify-content-center mb-5 pb-2">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <span class="subheading" style="color: #cda45e; font-size: 22px;">Özel Seçenekler</span>
                <h2 class="mb-4" style="color: #ffffff; font-size: 40px; font-weight: 800;">Gurme Menümüz</h2>
                <div style="width: 100px; height: 4px; background: #cda45e; margin: 0 auto;"></div>
            </div>
        </div>

        <div class="menu-container">
            @if (Model.Kategoriler != null)
            {
                foreach (var kategori in Model.Kategoriler)
                {
                    <div class="menu-wrap-custom ftco-animate">
                        <div class="text-center">
                            <h3 class="category-title">@kategori.KategoriAd</h3>
                        </div>

                        @{
                            var buKategorininUrunleri = Model.urunler
                                .Where(u => u.KategoriID == kategori.KategoriID)
                                .ToList();
                        }

                        @if (buKategorininUrunleri != null)
                        {
                            foreach (var urun in buKategorininUrunleri)
                            {
                                <div class="menus d-flex ftco-animate mb-4 align-items-center">
                                    <div class="menu-img img menu-img-circle" style="background-image: url(../../@urun.Resim);"></div>

                                    <div class="text pl-3 w-100">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="one-half">
                                                <h3 class="product-name">@urun.UrunAd</h3>
                                            </div>
                                            <div class="one-forth">
                                                <span class="menu-price-tag">@urun.Fiyat.ToString("0.##")₺</span>
                                            </div>
                                        </div>

                                        <p class="ingredients-text">
                                            @{
                                                if (!string.IsNullOrEmpty(urun.Icindekiler))
                                                {
                                                    var malzemeler = urun.Icindekiler.Split(',');
                                                    for (int i = 0; i < malzemeler.Length; i++)
                                                    {
                                                        <span>@malzemeler[i].Trim()</span>@(i < malzemeler.Length - 1 ? ", " : "")
                                                    }
                                                }
                                            }
                                        </p>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
            }
        </div>
    </div>
</section>


<section class="ftco-section testimony-section" style="background-image: url(../../images/bg_5.jpg);">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">

            <div class="col-lg-6 p-4 p-md-5 order-md-last ftco-animate">
                <div class="heading-section heading-section-white mb-4">
                    <span class="subheading">Bize Yazın</span>
                    <h2 class="mb-4">Düşüncelerinizi Paylaşın</h2>
                </div>

                @if (TempData["Hata"] != null)
                {
                    <div class="alert alert-danger text-center mb-3">
                        <i class="icon-warning"></i> @TempData["Hata"]
                    </div>
                }
                @if (TempData["Mesaj"] != null)
                {
                    <div class="alert alert-success text-center mb-3">
                        <i class="icon-check"></i> @TempData["Mesaj"]
                    </div>
                }

                <form action="/Index/YorumYap" method="post" class="contact-form">
                    <div class="form-group">
                        <input type="text" class="form-control" name="AdSoyad" placeholder="Adınız Soyadınız" required style="background: rgba(255,255,255,0.1); color: #fff; border: 1px solid rgba(255,255,255,0.2);">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="Mail" placeholder="E-Posta Adresiniz" required style="background: rgba(255,255,255,0.1); color: #fff; border: 1px solid rgba(255,255,255,0.2);">
                    </div>
                    <div class="form-group">
                        <textarea name="YorumIcerik" cols="30" rows="4" class="form-control" placeholder="Mesajınız..." required style="background: rgba(255,255,255,0.1); color: #fff; border: 1px solid rgba(255,255,255,0.2);"></textarea>
                    </div>

                    <div class="form-group">
                        <label class="text-white font-weight-bold" style="text-shadow: 1px 1px 2px black;">
                            Güvenlik Kodu: <span class="text-warning" style="font-size: 18px; letter-spacing: 3px;">@ViewBag.GosterilenKod</span>
                        </label>
                        <input type="text" name="KullaniciKodu" class="form-control" placeholder="Yukarıdaki kodu giriniz" required style="background: rgba(255,255,255,0.1); color: #fff; border: 1px solid rgba(255,255,255,0.2);">
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Yorumu Gönder" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
            </div>

            <div class="col-lg-6 ftco-animate">
                <div class="heading-section heading-section-white mb-5">
                    <span class="subheading">Referanslar</span>
                    <h2 class="mb-4">Mutlu Müşteriler</h2>
                </div>

                <div class="carousel-testimony owl-carousel ftco-owl">

                    @if (Model.MusteriYorumlari != null)
                    {
                        foreach (var item in Model.MusteriYorumlari)
                        {
                            <div class="item">
                                <div class="testimony-wrap p-4 pb-5">
                                    <div class="user-img mb-5" style="background-image: url(../images/person_1.jpg)">
                                        <span class="quote d-flex align-items-center justify-content-center">
                                            <i class="icon-quote-left"></i>
                                        </span>
                                    </div>
                                    <div class="text text-center">
                                        <p class="mb-5 pl-4 line">@item.YorumMetni</p>
                                        <p class="name">@item.MusteriAdSoyad</p>
                                        <span class="position">Müşteri</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                    <div class="item">
                        <div class="testimony-wrap p-4 pb-5">
                            <div class="user-img mb-5" style="background-image: url(../images/person_2.jpg)">
                                <span class="quote d-flex align-items-center justify-content-center">
                                    <i class="icon-quote-left"></i>
                                </span>
                            </div>
                            <div class="text text-center">
                                <p class="mb-5 pl-4 line">Yemekler harikaydı, servis çok hızlıydı. Kesinlikle tavsiye ederim!</p>
                                <p class="name">Örnek Müşteri</p>
                                <span class="position">Misafir</span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>


