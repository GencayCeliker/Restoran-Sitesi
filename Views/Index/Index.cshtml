<style>
    .large-blog-card {
        border-radius: 15px;
        overflow: hidden;
        background: #ffffff; /* Temanın yazıları bozmaması için içi beyaz kalıyor */
        transition: all 0.4s ease;
        box-shadow: 0 10px 20px rgba(0,0,0,0.4);
    }
        /* Fareyle üzerine gelince kart biraz büyür ve yukarı kalkar */
        .large-blog-card:hover {
            transform: translateY(-8px) scale(1.03);
            box-shadow: 0 15px 30px rgba(0,0,0,0.6);
        }

    .large-blog-img {
        height: 280px !important; /* Orijinalinden daha büyük bir resim alanı */
        display: block;
    }
</style>

<section class="ftco-section" style="background: linear-gradient(to bottom, #3a3a3a 0%, #121212 100%);">
    <div class="container">

        <div class="row justify-content-center mb-5 pb-2">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <span class="subheading" style="color: #cda45e;">Güncel</span>
                <h2 class="mb-4" style="color: #ffffff;">Haberler & Blog Yazıları</h2>
            </div>
        </div>

        <div class="row">
            @if (Model.SonBlogYazilari != null)
            {
                foreach (var blog in Model.SonBlogYazilari)
                {
                    <div class="col-md-4 ftco-animate mb-4">
                        <div class="blog-entry large-blog-card">

                            <a href="#" class="block-20 large-blog-img" style="background-image: url(/@blog.Resim);"></a>

                            <div class="text px-4 pt-4 pb-4">
                                <div class="meta mb-2">
                                    <div><a href="#"><span class="fa fa-calendar mr-1"></span> @Convert.ToDateTime(blog.Tarih).ToString("dd MMMM yyyy")</a></div>
                                    <div><a href="#"><span class="fa fa-user mr-1"></span> @blog.Yazar</a></div>
                                </div>

                                <h3 class="heading"><a href="#">@blog.Baslik</a></h3>

                                <p class="text-muted" style="font-size: 14px;">
                                    @{
                                        string icerikOzet = blog.Icerik;
                                        if (!string.IsNullOrEmpty(icerikOzet) && icerikOzet.Length > 70)
                                        {
                                            icerikOzet = icerikOzet.Substring(0, 70) + "...";
                                        }
                                    }
                                    @icerikOzet
                                </p>

                                <p class="clearfix mt-3 mb-0">
                                    <a href="#" class="float-left read btn btn-primary" style="border-radius: 20px; font-size: 12px; padding: 5px 15px;">Devamını Oku</a>

                                    <a href="#" class="float-right meta-chat" style="font-weight: 600;">
                                        <span class="fa fa-comment mr-1"></span> @blog.DuyuruID
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>


