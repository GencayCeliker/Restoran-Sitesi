
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Moly RS Restoran Yönetim Paneli" />
    <meta name="author" content="Moly" />
    <title>Moly RS - Yönetim Paneli</title>

    <link href="~/AdminTemplate/assets/css/pace.min.css" rel="stylesheet" />
    <script src="~/AdminTemplate/assets/js/pace.min.js"></script>

    <link rel="icon" href="~/images/logo.png" type="image/x-icon">
   
    <link href="~/AdminTemplate/assets/plugins/vectormap/jquery-jvectormap-2.0.2.css" rel="stylesheet" />
    <link href="~/AdminTemplate/assets/plugins/simplebar/css/simplebar.css" rel="stylesheet" />
    <link href="~/AdminTemplate/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/AdminTemplate/assets/css/animate.css" rel="stylesheet" type="text/css" />
    <link href="~/AdminTemplate/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/AdminTemplate/assets/css/sidebar-menu.css" rel="stylesheet" />
    <link href="~/AdminTemplate/assets/css/app-style.css" rel="stylesheet" />

</head>

<body class="bg-theme bg-theme1">

    <div id="wrapper">

        <div id="sidebar-wrapper" data-simplebar="" data-simplebar-auto-hide="true">
            <div class="brand-logo">
                <a href="/Admin/Index">
                    <img src="~/images/logo.png" width="30" class="logo-icon" alt="logo icon">
                    <h5 class="logo-text">Moly RS Admin</h5>
                </a>
            </div>

            <ul class="sidebar-menu do-nicescrol">
                <li class="sidebar-header">GENEL YÖNETİM</li>

                <li>
                    <a href="/Admin/Index">
                        <i class="zmdi zmdi-view-dashboard"></i> <span>Dashboard</span>
                    </a>
                </li>

                <li>
                    <a href="/Admin/SliderYonetimi">
                        <i class="zmdi zmdi-calendar-check"></i> <span>SliderYonetimi</span>
                       
                    </a>
                </li>

                <li>
                    <a href="/Admin/Rezervasyonlar">
                        <i class="zmdi zmdi-calendar-check"></i> <span>Rezervasyonlar</span>
                        <small class="badge float-right badge-light">YENİ</small>
                    </a>
                </li>

                <li>
                    <a href="/Admin/Masalar">
                        <i class="zmdi zmdi-layers"></i> <span>Masa Düzeni</span>
                    </a>
                </li>

                <li class="sidebar-header">MENÜ & İÇERİK</li>

                <li>
                    <a href="/Admin/Kategoriler">
                        <i class="zmdi zmdi-label"></i> <span>Kategoriler</span>
                    </a>
                </li>

                <li>
                    <a href="/Admin/Urunler">
                        <i class="zmdi zmdi-cutlery"></i> <span>Ürünler / Menü</span>
                    </a>
                </li>

                <li>
                    <a href="/Admin/Sefler">
                        <i class="zmdi zmdi-face"></i> <span>Şeflerimiz</span>
                    </a>
                </li>

                <li>
                    <a href="/Admin/Blog">
                        <i class="zmdi zmdi-assignment"></i> <span>Blog & Duyuru</span>
                    </a>
                </li>

                <li class="sidebar-header">SİTE AYARLARI</li>

                <li>
                    <a href="/Admin/Iletisim">
                        <i class="zmdi zmdi-phone"></i> <span>İletişim Bilgileri</span>
                    </a>
                </li>

                <li>
                    <a href="/Admin/Ayarlar">
                        <i class="zmdi zmdi-settings"></i> <span>Genel Ayarlar</span>
                    </a>
                </li>
                <li>
                    <a href="/Home/Index" target="_blank">
                        <i class="zmdi zmdi-globe"></i> <span>Siteye Git</span>
                    </a>
                </li>
            </ul>
        </div>
        <header class="topbar-nav">
            <nav class="navbar navbar-expand fixed-top">
                <ul class="navbar-nav mr-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link toggle-menu" href="javascript:void();">
                            <i class="icon-menu menu-icon"></i>
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav align-items-center right-nav-link">
                    @Html.Action("BildirimKutusu", "Admin")
                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle dropdown-toggle-nocaret" data-toggle="dropdown" href="#">
                            <span class="user-profile"><img src="~/images/logo.png" class="img-circle" alt="user avatar"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li class="dropdown-item user-details">
                                <a href="javaScript:void();">
                                    <div class="media">
                                        <div class="avatar"><img class="align-self-start mr-3" src="~/images/logo.png" alt="user avatar"></div>
                                        <div class="media-body">
                                            <h6 class="mt-2 user-title">Moly Admin</h6>
                                            <p class="user-subtitle">yonetici@molyrs.com</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                            <li class="dropdown-divider"></li>
                            <li class="dropdown-item"><i class="icon-power mr-2"></i> Çıkış Yap</li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </header>
        <div class="clearfix"></div>

        <div class="content-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>

        <footer class="footer">
            <div class="container">
                <div class="text-center">
                    Copyright © 2026 Moly RS Admin
                </div>
            </div>
        </footer>

        <div class="right-sidebar">
            <div class="switcher-icon">
                <i class="zmdi zmdi-settings zmdi-hc-spin"></i>
            </div>
            <div class="right-sidebar-content">
                <p class="mb-0">Tema Dokusu</p>
                <hr>
                <ul class="switcher">
                    <li id="theme1"></li>
                    <li id="theme2"></li>
                    <li id="theme3"></li>
                    <li id="theme4"></li>
                    <li id="theme5"></li>
                    <li id="theme6"></li>
                </ul>
                <p class="mb-0">Gradyan Arkaplan</p>
                <hr>
                <ul class="switcher">
                    <li id="theme7"></li>
                    <li id="theme8"></li>
                    <li id="theme9"></li>
                    <li id="theme10"></li>
                    <li id="theme11"></li>
                    <li id="theme12"></li>
                    <li id="theme13"></li>
                    <li id="theme14"></li>
                    <li id="theme15"></li>
                </ul>
            </div>
        </div>

    </div>
    <script src="~/AdminTemplate/assets/js/jquery.min.js"></script>
    <script src="~/AdminTemplate/assets/js/popper.min.js"></script>
    <script src="~/AdminTemplate/assets/js/bootstrap.min.js"></script>

    <script src="~/AdminTemplate/assets/plugins/simplebar/js/simplebar.js"></script>
    <script src="~/AdminTemplate/assets/js/sidebar-menu.js"></script>
    <script src="~/AdminTemplate/assets/js/jquery.loading-indicator.js"></script>
    <script src="~/AdminTemplate/assets/js/app-script.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
